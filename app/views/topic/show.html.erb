<h1><%= @topic.title %></h1>
<p><%= @topic.description %></p>

<h1>Posts</h1>
<ul>
<% @posts.each do |p| %>
	<li><%= link_to p.title, :controller => 'post', :action => 'show', :id => p.id %>
		<% if can? :delete, Post %>
			<%= link_to "Delete Post", { controller: 'post', action: 'delete', :id => p.id, :tid => @topic.id }, method: :delete, data: {confirm: 'Are you sure?'} %>
		<% end %>
	</li>
<% end %>
</ul>

<% if can? :create, Post %>
<%= link_to "Create a Post", :controller => 'post', :action => 'new', :id => @topic.id %>
<% end %>